<%- include('partials/header') %>
<div id="mid-container">
    <h1 id="page-heading">Competitive Poker</h1>
    <div id = "card-prep-row" class="row">
      <div id="current-bet-div" class="col">
        <button id="bet-button" class="btn betWinButton md-text gold-text" type="submit" name="bet-button" onclick="toggleBet()">bet<span id ="current-bet-span">1</span></button>
      </div>
      <div id="card-play-div" class="col">
        <button type="submit" role="button" id="card-deal-button" class="btn lg-text gold-bg red-text btn-style" name="deal-button" onclick="getCards()">Deal Cards</button>
      </div>
      <div id="current-win-div" class="col">
        <button id="win-button" class="btn betWinButton md-text gold-text" type="submit" name="win-button" disabled>win<span id="current-win-span">0</span></button>
      </div>
    </div>
    <div id="play-container">
      <div id="dealt-cards-div" class="row">
        <div class="card-slot-div col" id="card-0-div" onclick="toggleCardHold('hold0')">
          <figcaption class="hold-card-text text-opacity" id="hold0">HELD</figcaption>
          <img class ="cards" src="images/cards/blueBackCard.webp" id="card0">
        </div>
        <div class="card-slot-div col" id="card-1-div" onclick="toggleCardHold('hold1')">
          <figcaption class="hold-card-text text-opacity" id="hold1">HELD</figcaption>
          <img class ="cards" src="images/cards/blueBackCard.webp" id="card1">
        </div>
        <div class="card-slot-div col" id="card-2-div" onclick="toggleCardHold('hold2')">
          <figcaption class="hold-card-text text-opacity" id="hold2">HELD</figcaption>
          <img class ="cards" src="images/cards/blueBackCard.webp" id="card2">
        </div>
        <div class="card-slot-div col" id="card-3-div" onclick="toggleCardHold('hold3')">
          <figcaption class="hold-card-text text-opacity" id="hold3">HELD</figcaption>
          <img class ="cards" src="images/cards/blueBackCard.webp" id="card3">
        </div>
        <div class="card-slot-div col" id="card-4-div" onclick="toggleCardHold('hold4')">
          <figcaption class="hold-card-text text-opacity" id="hold4">HELD</figcaption>
          <img class ="cards" src="images/cards/blueBackCard.webp" id="card4">
        </div>
      </div>
      <h3 id="hand-ranking-heading"></h3>
    </div>
</div>
<dialog id="outOfCoinsDialog">
  <p class="dialog-popup-text">You ran out of coins!<br />
  <a id="practice-mode-link" class="sm-text blue-bg blue-text link-text" href="/casual-cards">Play Casual Mode</a></p>
  <div id="dialogButtonDiv" class="row">
    <div class="col">
      <button id="outOfCoinsCancel" class="btn sm-text red-bg gold-text btn-style" value="cancel" onclick="exitDialog('outOfCoinsDialog')">Cancel</button>
    </div>
    <div class="col">
     <button id="confirmBtn" class="btn sm-text blue-bg gold-text btn-style"><a id="go-button-link" role="button" href="/casual-cards">Go</a></button>
    </div>
  </div>
</dialog>
<dialog id="winCoinsDialog" class="sm-dialog">
  <span id="coin-win-popup-span"></span>
  <div id="winCoinsDiv" class="coinsDiv">
    <span id="coin-win-popup-text" class="dialog-popup-text">You win</span><span id="number-coins-won" class="coinsWon"></span><img loading="lazy" id="coins-popup-img" src="images/coins.webp">
  </div>
  <div id="coinDialogDiv" class="row">
    <div class="col">
      <button id="winCoinsCancel" class="btn sm-text red-bg gold-text btn-style">OK</button>
    </div>
  </div>
</dialog>
<%- include('partials/logindialogs') %>
<script defer src="javascripts\cards.js" type="text/javascript" ></script>
