<%- include('partials/header') %>

<div id="mid-container">
  <h1 id="page-heading">Farkle</h1>
  <div class="dice-prep-div">
    <button type="submit" role="button" id="farkle-roll-button" class="btn lg-text gold-bg red-text btn-style" onclick="casualFarkleRoll()">Roll Dice</button>
    <button type="submit" role="button" id="farkle-end-button" class="btn lg-text red-bg gold-text btn-style" onclick="endCasualTurn()" disabled>End Turn</button>
  </div>
  <div id="farkle-container">
    <div id="farkle-roll-div">
      <div class="farkle-slot-div" id="dice-0-div" onclick="toggleDiceHold('hold0')">
        <figcaption class="hold-dice-text text-opacity" id="hold0">HELD</figcaption>
        <img class ="dice" src="" id="dice0">
      </div>
      <div class="farkle-slot-div" id="dice-1-div" onclick="toggleDiceHold('hold1')">
        <figcaption class="hold-dice-text text-opacity" id="hold1">HELD</figcaption>
        <img class ="dice" src="" id="dice1">
      </div>
      <div class="farkle-slot-div" id="dice-2-div" onclick="toggleDiceHold('hold2')">
        <figcaption class="hold-dice-text text-opacity" id="hold2">HELD</figcaption>
        <img class ="dice" src="" id="dice2">
      </div>
      <div class="farkle-slot-div" id="dice-3-div" onclick="toggleDiceHold('hold3')">
        <figcaption class="hold-dice-text text-opacity" id="hold3">HELD</figcaption>
        <img class ="dice" src="" id="dice3">
      </div>
      <div class="farkle-slot-div" id="dice-4-div" onclick="toggleDiceHold('hold4')">
        <figcaption class="hold-dice-text text-opacity" id="hold4">HELD</figcaption>
        <img class ="dice" src="" id="dice4">
      </div>
      <div class="farkle-slot-div" id="dice-5-div" onclick="toggleDiceHold('hold5')">
        <figcaption class="hold-dice-text text-opacity" id="hold5">HELD</figcaption>
        <img class ="dice" src="" id="dice5">
      </div>
    </div>
    <h3 id="roll-ranking-heading"></h3>
    <h3 id="roll-score-heading" class="green-text">0</h3>
    <div id="farkle-roll-score-div" class="farkle-score-div">
      <span id="current-dice-heading" class="current-table-heading md-text">Score</span>
    </div>
    <div id="farkle-total-score-div" class="farkle-score-div">
      <span id="total-dice-heading" class="table-heading md-text">Total</span>
      <span id="total-score-text" class="roll-score md-text farkle-turn-tally"></span>
    </div>
  </div>
</div>
</div>
<dialog id="confirmDialog" class="container-fluid account-form-div account-dialog farkle-dialog">
  <h4 id="confirmHeading" class="md-text blue-text">Are you sure you want to end your turn?</h4>
  <div id="confirmDialogDiv" class="row justify-content-around farkle-div">
    <div class="col">
      <button id="confirmButton" class="btn sm-text red-bg gold-text btn-style">Yes</button>
    </div>
    <div class="col">
      <button id="cancelButton" class="btn sm-text blue-bg gold-text btn-style" onclick="exitDialog('confirmDialog')">No</button>
    </div>
  </div>
</dialog>
<dialog id="endTurnDialog" class="farkle-dialog">
  <b class="blue-text md-text">Turn Ended</b><br>
  <span class="sm-text">Points scored: </span><span id="endTurnPopupSpan"></span>
  <div id="endTurnDiv" class="farkle-div">
      <button id="endTurnCancel" class="btn sm-text red-bg gold-text btn-style">OK</button>
    </div>
</dialog>
<dialog id="mustHoldDialog" class="farkle-dialog">
  <span class="blue-text sm-text">You must hold dice to roll again</span>
  <div id="mustHoldDiv" class="farkle-div">
      <button id="mustHoldCancel" class="btn sm-text red-bg gold-text btn-style">OK</button>
    </div>
</dialog>
<dialog id="hotDiceDialog" class="farkle-dialog">
  <b class="green-text md-text">HOT DICE</b><br>
  <span class="blue-text sm-text">Roll all your dice again for extra winnings</span>
  <div id="hotDiceDiv" class="farkle-div">
      <button id="hotDiceCancel" class="btn sm-text blue-bg gold-text btn-style">OK</button>
    </div>
</dialog>
<dialog id="farkleDialog" class="farkle-dialog">
  <b class="red-text md-text">FARKLE</b><br>
  <span class="blue-text sm-text">Your turn has ended with a score of </span><span id="farklePopupSpan">0</span>
  <div id="farkleDiv" class="farkle-div">
      <button id="farkleCancel" class="btn sm-text blue-bg gold-text btn-style">OK</button>
    </div>
</dialog>

<%- include('partials/logindialogs') %>
<%- include('partials/footer') %>
<script src="javascripts\farkle.js" type="text/javascript" ></script>
<%- include('partials/javascripts') %>