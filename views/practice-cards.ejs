<%- include('partials/header') %>

<div id="mid-container">
    <h1 id="page-heading" class="mb-md-3 mb-2">Practice Poker</h1>
    <div id = "card-prep-row" class="justify-content-around mt-md-4 mb-md-3 my-sm-2 my-1">
      <div id="card-play-div" class="card-play-div text-center">
        <input type="button" role="button" id="card-deal-button" class="btn" name="deal-button" onclick="getPracticeCards()">{{ dealButtonText }}</button>
      </div>
    </div>
    <div class="container-xl" id="play-container">
      <div id="dealt-cards-div" class="card-play-div row justify-content-center m-lg-2 m-sm-1 my-1 mx-0">
        <div class="card-slot-div col-md-2 col p-lg-2 p-md-1 p-0" id="card-0-div">
          <figcaption class="hold-card-text text-opacity" id="hold0">HELD</figcaption>
          <img class ="cards img-fluid" src="images/cards/card_standard_blue_back.png" id="card0" onclick="toggleCardHold('hold0')">
        </div>
        <div class="card-slot-div col-md-2 col p-lg-2 p-md-1 p-0" id="card-1-div">
          <figcaption class="hold-card-text text-opacity" id="hold1">HELD</figcaption>
          <img class ="cards img-fluid" src="images/cards/card_standard_blue_back.png" id="card1" onclick="toggleCardHold('hold1')">
        </div>
        <div class="card-slot-div col-md-2 col p-lg-2 p-md-1 p-0" id="card-2-div">
          <figcaption class="hold-card-text text-opacity" id="hold2">HELD</figcaption>
          <img class ="cards img-fluid" src="images/cards/card_standard_blue_back.png" id="card2" onclick="toggleCardHold('hold2')">
        </div>
        <div class="card-slot-div col-md-2 col p-lg-2 p-md-1 p-0" id="card-3-div">
          <figcaption class="hold-card-text text-opacity" id="hold3">HELD</figcaption>
          <img class ="cards img-fluid" src="images/cards/card_standard_blue_back.png" id="card3" onclick="toggleCardHold('hold3')">
        </div>
        <div class="card-slot-div col-md-2 col p-lg-2 p-md-1 p-0" id="card-4-div">
          <figcaption class="hold-card-text text-opacity" id="hold4">HELD</figcaption>
          <img class ="cards img-fluid" src="images/cards/card_standard_blue_back.png" id="card4" onclick="toggleCardHold('hold4')">
        </div>
      </div>
      <h3 id="hand-ranking-heading">{{ resultText }}</h3>
    </div>
    <div id ="show-hide-odds-div">
      <button id="show-hide-odds-button" class="btn" onclick="toggleOddsTable()">Show Odds</button>
    </div>
    <div id="hand-odds-div">
      <span id="odds-heading" class="table-heading">Winning Hand Odds</span>
      <span class="odds-span">Royal Flush: </span><span id="royal-flush-odds" class="odds-span result">0.000154</span><span class="result">%</span><br />
      <span class="odds-span">Straight Flush: </span><span id="straight-flush-odds" class="odds-span result">0.00139</span><span class="result">%</span><br />
      <span class="odds-span">4 of a Kind: </span><span id="4-kind-odds" class="odds-span result">0.0240</span><span class="result">%</span><br />
      <span class="odds-span">Full House: </span><span id="full-house-odds" class="odds-span result">0.144</span><span class="result">%</span><br />
      <span class="odds-span">Flush: </span><span id="flush-odds" class="odds-span result">0.197</span><span class="result">%</span><br />
      <span class="odds-span">Straight: </span><span id="straight-odds" class="odds-span result">0.392</span><span class="result">%</span><br />
      <span class="odds-span">3 of a Kind: </span><span id="3-kind-odds" class="odds-span result">2.11</span><span class="result">%</span><br />
      <span class="odds-span">Two Pair: </span><span id="two-pair-odds" class="odds-span result">4.75</span><span class="result">%</span><br />
      <span class="odds-span">Jacks or Better: </span><span id="jacks-better-odds" class="odds-span result">13</span><span class="result">%</span><br />
      <span class="odds-span">Winning Hand: </span><span id="losing-hand-odds" class="odds-span win">20.6</span><span class="win">%</span><br />
      <span class="odds-span">Losing Hand: </span><span id="losing-hand-odds" class="odds-span loss">79.4</span><span class="loss">%</span><br />
    </div>
</div>
<dialog id="winHandDialog">
  <span id="hand-win-popup-span">{{ resultText }}</span>
  <div id="winHandDiv">
      <button id="winHandCancel" class="btn cancelbutton">OK</button>
    </div>
</dialog>

<%- include('partials/logindialogs') %>
<%- include('partials/footer') %>
<script src="\javascripts\vue\dist\vue.min.js"></script>
<script src="javascripts\cards.js" type="text/javascript" ></script>
