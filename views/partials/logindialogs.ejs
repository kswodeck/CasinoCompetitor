<dialog id="loginDialog" class="container-fluid account-form-div">
    <div class ="exit-button-div">
      <button id="loginDialogExit" class="exit-dialog-button" onclick="exitDialog('loginDialog')" >✖</button>
    </div>
    <h2 id="loginHeading" class="account-heading login-heading">Login to Pocket Poker</h2>
    <form method="GET">
      <label for="username" class="account-label">Username</label><br>
      <input type="text" name="username" class="account-input" minlength="5" maxlength="20" placeholder="username" size="25" autocomplete required><span class="valid-content"></span><br>
      <label for="password" class="account-label">Password</label><br>
      <input type="password" name="password" id="loginPassword" class="account-input password" minlength="5" maxlength="20" placeholder="password" size="25" autocomplete="new-password" required><i id="loginPassIcon" onclick="togglePasswordVisibility('loginPassword', 'loginPassIcon')" class="show-hide fas fa-eye"></i><span class="valid-content"></span><br>
      <span class="invalid-account-message"></span>
      <input type="submit" name="login-submit" onclick="validateAccountLogin()" role="button" value="Log In" class="btn" id="login-button">
    </form>
    <div class="account-already">
      <a id="forgot-user-link" onclick="displayForgotDialog('forgotUserDialog')">Recover Username</a> |
      <a id="forgot-pw-link" onclick="displayForgotDialog('forgotPWDialog')">Recover Password</a>
    </div>
  </dialog>
  <dialog id="forgotUserDialog" class="container-fluid account-form-div">
    <div class ="exit-button-div">
      <button id="forgotUserDialogExit" class="exit-dialog-button" onclick="exitDialog('forgotUserDialog')" >✖</button>
    </div>
    <h2 id="forgotUserHeading" class="account-heading login-heading">Forgotten Username</h2>
    <form method="GET">
      <label for="email" class="account-label">Email</label><br>
      <input type="email" name="email" id="forgotUserEmail" class="account-input" minlength="8" maxlength="60" placeholder="username@domain.com" size="40" autofocus autocomplete required><span class="valid-content"></span><br>
      <label for="password" class="account-label">Password</label><br>
      <input type="password" name="password" id="forgottenPassword" class="account-input password" minlength="5" maxlength="20" placeholder="password" size="25" autocomplete="new-password" required><i id="forgottenPassIcon" onclick="togglePasswordVisibility('forgottenPassword', 'forgottenPassIcon')" class="show-hide fas fa-eye"></i><span class="valid-content"></span><br>
      <span class="invalid-account-message"></span>
      <input type="submit" name="forgot-pw-submit" onclick="validateAccountLogin()" role="button" value="Recover Password" class="btn" id="forgot-pw-button">
    </form>
    <div class ="back-button-div">
      <button id="forgotUserBackButton"  class="back-arrow btn" name="back-arrow" onclick="backToLoginDialog('forgotUserDialog')"><i id="forgotUserBackArrow" class="fas fa-long-arrow-alt-left"></i></button>
      <span class="back-button-label" onclick="backToLoginDialog('forgotUserDialog')">Back to Login</span>
    </div>
    </dialog>
  <dialog id="forgotPWDialog" class="container-fluid account-form-div">
    <div class ="exit-button-div">
      <button id="forgotPWDialogExit" class="exit-dialog-button" onclick="exitDialog('forgotPWDialog')" >✖</button>
    </div>
    <h2 id="forgotPWHeading" class="account-heading login-heading">Forgotten Password</h2>
    <form method="GET">
      <label for="email" class="account-label">Email</label><br>
      <input type="email" name="email" id="forgotPWEmail" class="account-input" minlength="8" maxlength="60" placeholder="username@domain.com" size="40" autofocus autocomplete required><span class="valid-content"></span><br>
      <label for="username" class="account-label">Username</label><br>
      <input type="text" name="username" class="account-input" minlength="5" maxlength="20" placeholder="username" size="25" autocomplete required><span class="valid-content"></span><br>
      <span class="invalid-account-message"></span>
      <input type="submit" name="forgot-user-submit" onclick="validateAccountLogin()" role="button" value="Recover Username" class="btn" id="forgot-user-button">
    </form>
    <div class ="back-button-div">
      <button id="forgotPWBackButton" class="back-arrow btn" name="back-arrow" onclick="backToLoginDialog('forgotPWDialog')"><i id="forgotPWBackArrow" class="fas fa-long-arrow-alt-left"></i></button>
      <span class="back-button-label" onclick="backToLoginDialog('forgotPWDialog')">Back to Login</span>
    </div>
    </dialog>