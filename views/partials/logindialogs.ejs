    <form action="/forgotpass" method="POST">
      <label for="email" class="account-label">Email</label><br>
      <input type="email" name="forgotPW[email]" id="forgotPWEmail" class="forgotPassInput" minlength="8" maxlength="60" placeholder="username@domain.com" size="40" autocomplete="email" required><span class="forgotPassValid"></span><br>
      <label for="username" class="account-label">Username</label><br>
      <input type="text" name="forgotPW[username]" class="forgotPassInput" minlength="5" maxlength="20" placeholder="username" size="25" autocomplete="username" required><span class="forgotPassValid"></span><br>
      <label for="birthday" class="account-label">Birthday</label><br> <!-- phone number XXX-XXX-XXXX pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" -->
      <input type="date" name="forgotPW[birthday]" id="forgotPWBirthday" class="forgotPassInput birthday" size="8" min="1920-01-01" max="2019-12-31" onkeypress="validateKeys(event, 'date')" pattern="^[0–9]$" title="format: mm-dd-yyyy" required><span class="forgotPassValid"></span><br>
      <ul id="invalid-forgot-password" class="invalid-fields-list"></ul>
      <input type="submit" name="forgot-user-submit" role="button" value="Recover Password" class="btn md-text blue-bg gold-text btn-style account-button" id="forgot-user-button">
    </form>
    <div class ="back-button-div">
      <button id="forgotPWBackButton" class="back-arrow btn blue-text lg-text" name="back-arrow" onclick="backFromDialog('forgotPWDialog')"><i id="forgotPWBackArrow" class="fas fa-long-arrow-alt-left back-icon"></i></button>
      <span class="back-button-label blue-text sm-text" onclick="backFromDialog('forgotPWDialog')">Back to Login</span>
    </div>
</dialog>